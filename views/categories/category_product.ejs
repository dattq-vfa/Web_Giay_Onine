<div class="container">

    <div class="dropdown form-group">
        <label for="cars">Type: </label>
        <select id="TYPE" name="TYPE" class="btn btn-primary ">
            <option value="Boy">Boy</option>
            <option value="Girl">Girl</option>
            <option value="Child">Child</option>
            <option value="Other">Other</option>
          </select>
        <label for="cars">Group: </label>
        <select id="TYPE" name="TYPE" class="btn btn-primary ">
            <option value="Classic">Classic</option>
            <option value="One Star">One Star</option>
          </select>
    </div>

  <div class="row">
    <div class="col-sm-4 form-group">
      <input class="form-control" id="name" name="name" placeholder="Name" type="text" required>
    </div>
    <div class="col-sm-3 form-group">
      <input class="form-control" id="price" name="price" placeholder="Price" type="text" required>
    </div>
  </div>

  <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Upload image</button>
  <br>
  <label for="content">Describe:</label>
  <textarea  class="form-group" name="content" id="content" placeholder="Describe" ></textarea>
  <div class="row">
    <div class="col-sm-12 form-group">
      <button class="btn btn-default pull-right" type="submit">Send</button>
    </div>
  </div>

</div>


<!-- The Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Upload Image</h4>
          <span type="button" class="close" data-dismiss="modal">&times;</span>
        </div>
        <!-- //enctype="multipart/form-data" very important -->
        <form id="upload_img" method="POST" enctype="multipart/form-data">
            <!-- Modal body -->   
            <div class="modal-body">
                <div class="form-group">
                    <label for="img">Image:</label>
                    <!-- multiple neu input nhieu file -->
                    <input type="file" class="form-control" id="img" name="img" multiple>
                    <br>
                    (NOTE: Image must .jpg .png, dung luong khong duoc > 100kb)
              </div>
              <div class="img" id="show_img"></div>
              
              <!-- Modal footer -->
              <div class="modal-footer">
                <button type="button" id="upload_img" class="btn btn-success">Upload</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
              </div>
        </form> 
               
      </div>
    </div>
  </div>


  <script>
      $(document).ready(function(){
        $('#upload_img').on('click', function(e){
            e.preventDefault();
            $.ajax({
                url:'upload_img',
                type:'POST',
                success: function (result) {
                    $('#result').html(result);
                }
            });

            return false;
        });
      })
  </script>

